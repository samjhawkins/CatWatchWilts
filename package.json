{
  "name": "CatWatchWilts",
  "version": "0.0.1",
  "description": "Website for CatWatchWiltshire",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production --config ./config/webpack.prod.config.js --env.PLATFORM=production --env.VERSION=stag --progress",
    "build.dev": "webpack --mode development --config ./config/webpack.prod.config.js --env.PLATFORM=development --env.VERSION=stag --progress --hot --watch",
    "dev": "webpack-dev-server --mode development --config ./config/webpack.base.config.js --open --hot --history-api-fallback --env.PLATFORM=local --env.VERSION=stag",
    "prod": "npm run build && node server",
    "lint": "eslint src --fix --ext js,jsx",
    "test": "jest --testPathIgnorePatterns --watchAll",
    "coverage": "jest --coverage --watchAll=false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samjhawkins/catWatchWiltshire.git"
  },
  "author": "Sam Hawkins",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samjhawkins/catWatchWiltshire/issues"
  },
  "homepage": "www.catwatchwiltshire.co.uk",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.2.0",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.3.0",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "final-form": "^4.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-cookies": "^0.1.1",
    "react-dom": "^16.8.6",
    "react-final-form": "^6.4.0",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/jest-dom": "^5.4.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^10.0.1",
    "axios-mock-adapter": "^1.18.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "css-loader": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^4.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^2.0.4",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "url-loader": "^2.0.1",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.1",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/**/*.style.js"
    ],
    "setupFiles": [
      "<rootDir>/jestSetup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|svg)$": "<rootDir>/src/images/imageMock.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  }
}
